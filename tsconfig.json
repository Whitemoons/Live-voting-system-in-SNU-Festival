{
    "compilerOptions": {
      "moduleResolution": "bundler",
      "target": "ESNext",
      "module": "ESNext",
      "verbatimModuleSyntax": true,
      "isolatedModules": true,
      "resolveJsonModule": true,
      "sourceMap": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "checkJs": false,
      "allowJs": true,
      "types": ["svelte"]
    },
    "include": ["src/**/*.ts", "src/**/*.svelte"],
    "exclude": ["node_modules"]
  }
  